{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "rxjs": ["../node_modules/rxjs"],
      "react": ["../node_modules/@types/react"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
